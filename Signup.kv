
#Sign Up pages
<SignupPage>:
    popup: my_popup_label

    name: "Sign up"
    GridLayout:
        size_hint: (0.5, 0.5)
        rows: 6
        padding: 20
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
        cols: 1
        Label:
            id: my_popup_label
            text: "Sign up"
            size_hint: (0.2, 0.06)
            font_size: 30
        TextInput:
            id: email
            hint_text: "Email"
            size_hint: (0.2, 0.06)
            font_size: 20
            multiline: False
        TextInput:
            id: pwd
            hint_text: "Password"
            size_hint: (0.2, 0.06)
            font_size: 20
            multiline: False
            password: True
        Button:
            text: "Sign up"
            size_hint: (0.2, 0.06)
            on_press:
                root.newsignup()
                root.manager.transition.direction = 'up'
        Button:
            text: "Already Signed Up?"
            size_hint: (0.2, 0.06)
            on_press:
                root.manager.current = 'LoginPage'
                root.manager.transition.direction  = 'up'
